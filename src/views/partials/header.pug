header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li 
                a(href="/search")
                    i.fas.fa-search    
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video
                li 
                    a(href=`/user/${loggedInUser._id}/edit`) Edit profile
                li 
                    a(href="/user/logout") Logout
                li
                    a(href=`/user/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl === ""
                            span :D
                        else 
                            img.header__avatar(src="/"+loggedInUser.avatarUrl)
            else
                li 
                    a(href="/join") Join
                li 
                    a(href="/login").header__btn Login