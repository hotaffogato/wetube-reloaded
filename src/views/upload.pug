extends base.pug

block content
    if(errorMessage) 
        h2 #{errorMessage}

    form(method="POST", enctype="multipart/form-data")
        labal(for="video") Video
        input(type="file", name="video", id="video", accept="video/*", required)
        input(name="title", placeholder="Title", type="text", maxlength=60, required)
        input(name="description", placeholder="Description", type="text", minlength=1, required)
        input(name="hashtags", placeholder="Hashtags, separated by comma", type="text", required)
        input(type="submit", value="Upload Video")