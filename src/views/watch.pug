extends base.pug

block content
    if(errorMessage)
        h2 #{errorMessage}

    div#videoContainer(data-id=video._id)
        video(src="/"+video.fileUrl)
        div#videoControls.videoControls
            span#play
                i.fas.fa-paly
            div#timeline
                span#currentTime 00:00
                span  / 
                span#totalTime 00:00
            div
                input(type="range", step="1", value="0", min="0")#timelinebar
            span#mute
                i.fas.fa-volumen-up
            input(type="range",step="0.1", value="0.5", min="0", max="1")#volumen
            div
                span#fullScreen
                    i.fas.fa-expand
    div
        small Uploaded by #{video.owner.username}
        small=video.createdAt
        p=video.description
        p=video.hashtags
        
    div.owner__info
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video._id}/edit`) Edit Video &rarr;
            br
            a(href=`${video._id}/delete`) Delete Video &rarr;
    
    .video__comments
        
        form.video__comments-form#commentForm
            textarea(placeholder="Leave a comment here!")
            button Comment  
        //
            .comment__uploaded
                if(comment)
                #comment-user
                    img(src="/"+avatarUrl)#comment-avatar
                    span#comment-user user name
                    span#comment-date  date
                    if(owner)
                        span#comment-edit.commentBtn edit
                        span#comment-delete.commentBtn delete 
                #comment-content comment content


block scripts 
    script(src="/static/js/videoPlayer.js")
    script(src="/static/js/comment.js")